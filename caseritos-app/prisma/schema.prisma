generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String?         @unique
  did            String?
  emailVerified  DateTime?       @map("email_verified")
  image          String?
  accounts       Account[]
  sessions       Session[]
  Authenticator  Authenticator[]
  Sale           Sale[]
  reviewsAsUser  Review[]        @relation("SellerReviews")
  reviewsAsBuyer Review[]        @relation("BuyerReviews")
  SaleIntent     SaleIntent[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Authenticator {
  credentialID         String  @unique
  userId               String  @map("user_id")
  providerAccountId    String  @map("provider_account_id")
  credentialPublicKey  String  @map("credential_public_key")
  counter              Int
  credentialDeviceType String  @map("credential_device_type")
  credentialBackedUp   Boolean @map("credential_backed_up")
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model Sale {
  id                 String   @id @default(cuid())
  sellerId           String   @map("seller_id")
  productName        String   @map("product_name")
  productDescription String   @map("product_description")
  createdAt          DateTime @default(now())
  photoUrl           String?  @map("photo_url")

  user       User         @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  SaleIntent SaleIntent[]

  @@map("sales")
}

model Review {
  id       String  @id @default(cuid())
  userId   String  @map("user_id")
  buyerId  String  @map("buyer_id")
  rating   Int     @default(0)
  comment  String?
  // if it is null, the review it not correctly reviewed yet
  hash     String?
  photoUrl String? @map("photo_url")

  createdAt DateTime @default(now())

  user       User         @relation("SellerReviews", fields: [userId], references: [id], onDelete: Cascade)
  buyer      User         @relation("BuyerReviews", fields: [buyerId], references: [id], onDelete: Cascade)
  SaleIntent SaleIntent[]
}

model SaleIntent {
  id       String  @id @default(cuid())
  saleId   String  @map("sale_id")
  userId   String? @map("user_id")
  reviewId String? @map("review_id")

  createdAt DateTime @default(now())

  sale   Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  review Review? @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@map("sale_intents")
}
